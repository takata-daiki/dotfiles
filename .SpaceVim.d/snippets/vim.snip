snippet     vimrc
options     head
  " basic
  syntax on
  filetype plugin indent on
  set backspace=indent,eol,start
  set whichwrap=b,s,h,l,<,>,[,]
  set number
  set mouse=a

  " search
  set incsearch
  set hlsearch
  nnoremap <Esc><Esc> :nohlsearch<CR><ESC>

  " yank -> clipboard
  set clipboard=unnamed,autoselect

  " tab
  set autoindent
  set tabstop=2
  set shiftwidth=0
  set expandtab
  set smarttab

  " bracket
  inoremap {<Enter> {}<Left><CR><ESC><S-o>
