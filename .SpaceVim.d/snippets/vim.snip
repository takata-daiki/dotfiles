snippet     vimrc
options     head
  " basic
  syntax on
  filetype plugin indent on
  set backspace=indent,eol,start
  set number
  set mouse=a

  " search
  set incsearch
  set hlsearch
  nnoremap <Esc><Esc> :nohlsearch<CR><ESC>

  " yank -> clipboard
  set clipboard=unnamed,autoselect

  " tab
  set autoindent
  set smartindent
  set expandtab
  set tabstop=2
  set shiftwidth=2
  set softtabstop=2

  " bracket
  inoremap {<Enter> {}<Left><CR><ESC><S-o>
